. /warewulf/transports/http/functions


case $1 in
    pre)
        TYPE="pre"
    ;;
    post)
        TYPE="post"
    ;;
    *)
        echo "What type of script do you wish to download? ('pre' or 'post)"
        exit 1
    ;;
esac

while true; do
    for master in `echo $WWMASTER | sed -e 's/,/ /g'`; do
        if wget -q -O - "http://$master:$WWPORT/script?hwaddr=$HWADDR&type=$TYPE" 2>/dev/null; then
            exit 0
        fi
    done
    sleep 1
done

