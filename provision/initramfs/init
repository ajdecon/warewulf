#
# Copyright (c) 2003-2011, The Regents of the University of California,
# through Lawrence Berkeley National Laboratory (subject to receipt of any
# required approvals from the U.S. Dept. of Energy).  All rights reserved.
#


mkdir /proc 2>/dev/null
mkdir /sys  2>/dev/null
mkdir /tmp  2>/dev/null
mkdir /var  2>/dev/null
mkdir /usr  2>/dev/null

mount -t proc none /proc
mount -t sysfs none /sys

. /etc/functions

NEWROOT=/newroot
export NEWROOT

dmesg -n 1 >/dev/null 2>&1

clear

msg_blue "Now Booting Warewulf...\n"
echo

if [ -n "$WWNODE" ]; then
    msg_white "Setting Hostname: "
    msg_gray "$WWNODE\n"
    hostname $WWNODE
fi

if [ -x "/sbin/mdev" ]; then
   echo /sbin/mdev > /proc/sys/kernel/hotplug
   /sbin/mdev -s
fi

msg_white  "Loading drivers: "

for module in `/sbin/detect | sort | uniq`; do
    msg_gray " $module"
    modprobe $module
done

echo

ifup() {
    DEVICE=$1
    RETVAL=1
    if [ -n "$WWIP" -a -n "$WWNETMASK" ]; then
        if ifconfig $DEVICE up >/dev/null 2>&1; then
            msg_white  "Configuring $DEVICE: "
            ifconfig $DEVICE $WWIP netmask $WWNETMASK up
            RETVAL=$?
            msg_green "Success! "
            msg_gray "$WWIP/$WWNETMASK\n"
        fi
    else
        if ifconfig $DEVICE up >/dev/null 2>&1; then
            msg_white "Configuring $DEVICE: "
            sleep 2
            udhcpc --now -i $DEVICE -t 5 -s /sbin/dhcp-script >/dev/null
            RETVAL=$?
            if [ "$RETVAL" -eq 0 ]; then
                msg_green "Success! "
                . /etc/network.conf
                msg_gray "DHCP/$IPADDR\n"
            else
                msg_red "Error! "
                msg_gray "(Could not obtain a DHCP lease)\n"
            fi
        fi
    fi
    return $RETVAL
}


if [ -n "$WWDEV" ]; then
    for i in $WWDEV; do
        if ifup $i; then
            echo "$i" > /tmp/wwdev
            break
        fi
    done
else
    for i in eth0 eth1 eth2 eth3 eth4; do
        if ifup $i; then
            echo "$i" > /tmp/wwdev
            break
        fi
    done
fi



for i in /etc/warewulf/init/*; do
    if [ -x "$i" -a -f "$i" ]; then
        sh $i
    fi
done


msg_white "Probing for HW Address: "
HWADDR=`/sbin/hwaddr`
export HWADDR
if [ -n "$HWADDR" ]; then
    msg_green "Success! "
    msg_gray "($HWADDR)\n"
else
    msg_red "ERROR: Could not identify Ethernet hardware address\n"
    echo "Rebooting in 5 seconds...."
    sleep 5
    /sbin/reboot
fi

while true; do
    msg_white "Getting base node configuration: "

    if wwgetnodeconfig > /tmp/nodeconfig; then
        . /tmp/nodeconfig
        msg_green "Success! "
        msg_gray "(I am: $WWNAME)\n"
    else
        msg_red "Failure\n"
        sleep 5
        continue
    fi


    msg_white "Running the provision handler\n"
    provisionhandler

    if [ -x "/warewulf/init.$WWPROVISIONMETHOD" ]; then
        echo
        msg_white "Calling init.....\n"
        sleep 3
        clear
        exec /warewulf/init.$WWPROVISIONMETHOD
    fi

    echo
    echo "-------------------------------------------------------------------------------";
    msg_gray "Starting provision process again...\n"
    sleep 3
done
