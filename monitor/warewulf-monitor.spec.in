%{!?_rel:%{expand:%%global _rel 0.r%(svnversion | sed 's/[^0-9].*$//' | grep '^[0-9][0-9]*$' || echo 0000)}}
%define debug_package %{nil}

Name: warewulf-monitor
Summary: A suite of tools for clustering
Version: @PACKAGE_VERSION@
Release:  %{_rel}
License: BSD
Group: System Environment/Clustering
Source: %{name}-%{version}.tar.gz
BuildRoot: /var/tmp/%{name}-buildroot
ExclusiveOS: linux
Conflicts: warewulf <= 2.9
BuildRequires: json-c-devel

%description
Warewulf >= 3 is a set of utilities designed to better enable
utilization and maintaince of clusters or groups of computers.

This is the main package which includes the main daemon and
supporting libs.

%prep
%setup

%build
%configure 
%{__make} %{?mflags}

%install
%{__make} install DESTDIR=$RPM_BUILD_ROOT %{?mflags_install}

%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root)
%doc AUTHORS COPYING ChangeLog INSTALL NEWS README TODO
%config(noreplace) %{_sysconfdir}/warewulf/monitor.conf
%perl_vendorlib/*
%{_bindir}/*

%changelog
