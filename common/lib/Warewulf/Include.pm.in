
package Warewulf::Include;

use Exporter;
use File::Basename;
use vars ('$VERSION', '%wwconfig');

our @ISA = ("Exporter");

our @EXPORT = ('&wwconfig');

$VERSION = "@VERSION@";

=head1 NAME

Warewulf::Include - Warewulf base configuration paramaters

=head1 ABOUT

This package gets updated at build time to match the configure options
that it was called with. Including this file will make a global
configuration hash available (%pconfig). Below is the list of exported
values.

=head1 SYNOPSIS

    use Warewulf::Include;

    foreach my $key ( keys %Warewulf::Include::wwconfig) {
        print "$key: $Warewulf::Include::wwconfig{$key}\n";
    }

=head1 CONFIGURATION:

    PROGNAME
    VERSION
    PREFIX
    STATEDIR
    SYSCONFDIR
    LIBDIR
    DATADIR
    PERLMODDIR

=cut

my $prefix = "@prefix@";
my $exec_prefix = "@exec_prefix@";

$wwconfig{"PROGNAME"}                        = basename($0);
$wwconfig{"VERSION"}                         = $VERSION;
$wwconfig{"PREFIX"}                          = "@prefix@";
$wwconfig{"STATEDIR"}                        = "@localstatedir@";
$wwconfig{"SYSCONFDIR"}                      = "@sysconfdir@";
$wwconfig{"LIBDIR"}                          = "@libdir@";
$wwconfig{"DATADIR"}                         = "@datadir@";
$wwconfig{"LIBEXECDIR"}                      = "@libexecdir@";
$wwconfig{"PERLMODDIR"}                      = "@PERL_VENDORLIB@";


sub
wwconfig($)
{
    my $var = uc(shift);

    if (exists($wwconfig{"$var"})) {
        return($wwconfig{"$var"});
    }

    return();
}

